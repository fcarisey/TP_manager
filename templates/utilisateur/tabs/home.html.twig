<script lang="js">
    window.onload = () => {
        document.forms.utilisateur.parentNode.parentNode.children[2].children[1].addEventListener('click', evt => {
            document.forms.utilisateur.submit()
        })

        document.forms.tp.parentNode.parentNode.children[2].children[1].addEventListener('click', evt => {
            document.forms.tp.submit()
        })
    }

    document.forms

    function userDelete(id)
    {
        document.forms.utilisateurDelete.action = "/utilisateur/" + id
        return 0;
    }

    function userEdit(id, nom, prenom, courriel, classe_id)
    {
        const form = document.forms[2]

        form.action = "/utilisateur/" + id

        form['utilisateur[nom]'].value = nom;
        form['utilisateur[prenom]'].value = prenom;
        form['utilisateur[courriel]'].value = courriel;

        Array.from(form['utilisateur[classe]'].getElementsByTagName('option')).forEach((v, i) => {
            if (v.value === classe_id)
                form['utilisateur[classe]'].selectedIndex = i;
        })
    }

    function getTps(classe_id){
        if (classe_id === null)
            return

        Array(document.forms.tp.options).forEach((e, i, a) => {
            console.log(a)
        })

        //document.forms.tp.elemtents.tp_classe

        let table = document.getElementById("tp_table");
        table.children[1].innerHTML = null;
        table.dataset.classeid = classe_id;

        fetch('/utilisateur/search/tp?classe_id=' + classe_id, {
            method: 'GET',
        })
            .then(response => response.json())
            .then(data => {

                data.forEach((item) => {
                    let date_debut = new Intl.DateTimeFormat('fr-FR', {
                        day: '2-digit',
                        month: '2-digit',
                        year: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                        timeZone: 'UTC'
                    }).format(new Date(item.date_debut));

                    let date_fin = new Intl.DateTimeFormat('fr-FR', {
                        day: '2-digit',
                        month: '2-digit',
                        year: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                        timeZone: 'UTC'
                    }).format(new Date(item.date_fin));

                    console.log(item)

                    const row = `
                        <tr>
                            <td>${item.titre}</td>
                            <td>${date_debut}</td>
                            <td>${date_fin}</td>
                            <td>
                                <a href="#"
                                data-bs-toggle="modal" data-bs-target="#modal-edit-tp" data-id="${item.id}" data-title="${item.titre}" data-description="${item.description}" data-classe="${item.classe.id}" data-dateDebut="${item.date_debut}" data-dateFin="${item.date_fin}" onclick="tpEdit(this)">
                                    Modifier
                                </a>
                            </td>
                            <td>
                                <a href="#" class="text-red" data-bs-toggle="modal" data-bs-target="#modal-delete-tp" onclick="tpDelete('${item.id}')">
                                    Supprimer
                                </a>
                            </td>
                        </tr>
                    `;

                    table.children[1].insertAdjacentHTML('beforeend', row);
                });
            })
            .catch(error => console.log(error));
    }

    function tpEdit(elem){
        let form = document.forms[5]

        form.action = "/utilisateur/" + elem.dataset.id

        let date = new Date(elem.dataset.datedebut);
        let date_debut = date.toISOString().slice(0, 16).replace('T', ' ');

        date = new Date(elem.dataset.datefin);
        let date_fin = date.toISOString().slice(0, 16).replace('T', ' ');

        form['tp[titre]'].value = elem.dataset.title
        form['tp[description]'].value = elem.dataset.description
        form['tp[date_debut]'].value = date_debut
        form['tp[date_fin]'].value = date_fin

        Array.from(form['tp[classe]'].getElementsByTagName('option')).forEach((v, i) => {
            if (v.value === elem.dataset.classe)
                form['tp[classe]'].selectedIndex = i;
        })
    }
</script>
