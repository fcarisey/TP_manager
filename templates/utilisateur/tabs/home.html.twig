                            <td>{{ user.getPrenom() }}</td>
                            <td>{{ user.getNom() }}</td>
                            <td class="text-secondary"><a href="#" class="text-reset"><b>{{ user.getClasse().getDesignation() | default("X") }}</b></a></td>
                            <td>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#modal-edit-user" onclick="userEdit('{{ user.getId() }}', '{{ user.getNom() }}', '{{ user.getPrenom() }}', '{{ user.getCourriel() }}', '{{ user.getClasse().getId() | default("null") }}')">
                                    Modifier
                                </a>
                            </td>
                            <td>
